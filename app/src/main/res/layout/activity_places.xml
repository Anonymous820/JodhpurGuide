<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg3"
    android:columnCount="2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/l1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mehrangarhfort"
            />
        <ImageView
            android:id="@+id/l2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ghantaghar"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Mehrangarh Fort"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginBottom="20sp"

            />
        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Ghantaghar"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/l3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/jaswantthada"
            />
        <ImageView
            android:id="@+id/l4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/kaylanalake"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:text="Jaswant Thada"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="30sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Kaylana Lake"
            android:textSize="20dp"
            android:layout_marginRight="30sp"
            android:layout_marginBottom="20sp"
            android:textStyle="bold"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/l5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/machiapark"
            />
        <ImageView
            android:id="@+id/l6"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/umaidp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Machia Park"
            android:textStyle="bold"
            android:textSize="20dp" />


        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="Umaid Bhawan"
            android:textSize="20dp"
            android:textStyle="bold"
            />

    </LinearLayout>



</LinearLayout>
